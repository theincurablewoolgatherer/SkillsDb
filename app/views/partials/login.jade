extends ../base

block content
    style(type='text/css')
         |body {
         |    background:url('/public/images/wallpaper.jpg');background: url('/images/wallpaper.jpg');background-size: cover;background-repeat: no-repeat;
         |}
    div#wrap
        div.container(ng-controller="LoginCtrl")
            form.form-signin.center-vertical(ng-submit = "login()", method = "post")
                h2.form-signin-heading Sign In
                input.form-control(ng-model = "user.username", placeholder = "Username")
                input.form-control(ng-model = "user.password", type = "password", placeholder = "Password")
                button.btn.btn-lg.btn-primary.btn-block(type = "submit") Login
    
